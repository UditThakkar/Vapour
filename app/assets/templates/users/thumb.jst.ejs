<a href="#users/<%= user.id %>"
  <% if (!displayName) { %>
    class="user-link with-floating-name group"
    data-alias="<%= user.escape('alias') %>"
  <% } else { %>
    class="user-link group"
  <% } %>
  >
  <figure class="user-thumb-avatar">
    <img src="<%= user.get('avatar_url') %>" alt="" />
  </figure>
  <figcaption class="user-thumb-text">
    <% if (displayName) { %>
      <%= user.escape('alias') %>
    <% } %>
  </figcaption>
</a>
